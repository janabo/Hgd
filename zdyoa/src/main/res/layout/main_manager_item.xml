<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:background="@null"
    android:id="@+id/container">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:layout_marginTop="15dip">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dip"
            android:gravity="center"
            android:paddingBottom="15dip"
            android:text=""
            android:textColor="#212121"
            android:textSize="12sp"/>

    </LinearLayout>

    <ImageView android:id="@+id/gragItemViewAdd"
        android:layout_width="22dp" android:layout_height="22dp"
        android:layout_gravity="right" android:src="@mipmap/addapp"
        android:background="@null"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:scaleType="fitXY"
        android:visibility="gone"/>
</FrameLayout>