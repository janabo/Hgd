            android:text="查看投票参与人查看投票参与人查看投票参与人查看投票参与人查看投票参与人"
            android:textColor="#212121"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="7dip"
            android:layout_height="11dip"
            android:src="@mipmap/into_icon" />
    </LinearLayout>

</LinearLayout>